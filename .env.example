# Banking ML Pipeline - Environment Variables
# Copy this file to .env and fill in your values

# Base Paths (override defaults)
BANKING_BASE_DIR=/mnt/deepa/Banking
BANKING_USE_CASES_DIR=${BANKING_BASE_DIR}/5_Star_UseCases
BANKING_LOGS_DIR=${BANKING_BASE_DIR}/logs

# Database Paths
BANKING_UNIFIED_DB=${BANKING_BASE_DIR}/banking_unified.db
BANKING_RESULTS_DB=${BANKING_BASE_DIR}/ml_pipeline_results.db
BANKING_PREPROCESSING_DB=${BANKING_BASE_DIR}/preprocessing_results.db
BANKING_RAG_CACHE_DB=${BANKING_BASE_DIR}/rag_cache.db

# Vector Store
BANKING_VECTOR_STORE_DIR=${BANKING_BASE_DIR}/vector_store

# Ollama Configuration (for RAG)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Processing Limits
SAMPLE_LIMIT=500000
MAX_WORKERS=8

# Logging
LOG_LEVEL=INFO
